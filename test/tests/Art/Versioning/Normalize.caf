
{normalize} = Neptune.Art.Versioning

suite: ->
  test "normalize version: '0.0.1'", ->
    assert.eq
      normalize version: '0.0.1'
      version:     "0.0.1"
      release:     major: 0, minor: 0, patch: 1
      development: major: 0, minor: 0, patch: 0
      combined:    "0.0.1"

  test "normalize version: release:, development:", ->
    assert.eq
      normalize
        release:     major: 1, minor: 2, patch: 3
        development: major: 0, minor: 4, patch: 0

      version:     "1.2.3"
      release:     major: 1, minor: 2, patch: 3
      development: major: 0, minor: 4, patch: 0
      combined:    "1.2+4.3"