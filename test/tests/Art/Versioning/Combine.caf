
{combine} = Neptune.Art.Versioning

suite: ->
  test "combine major: 1, minor: 2, patch: 3", ->
    assert.eq
      combine major: 1, minor: 2, patch: 3
      "1.2.3"

  test "combine major: 1, minor: 2, patch: 3, dev-all", ->
    assert.eq
      combine
        major: 1, minor: 2, patch: 3
        major: 9, minor: 8, patch: 7
      "1+9.2+8.3+7"

  test "combine major: 1, minor: 2, patch: 3, dev-only-patch", ->
    assert.eq
      combine
        major: 1, minor: 2, patch: 3
        major: 0, minor: 0, patch: 7
      "1.2.3+7"

  test "combine major: 1, minor: 2, patch: 3, dev-only-minor", ->
    assert.eq
      combine
        major: 1, minor: 2, patch: 3
        major: 0, minor: 8, patch: 0
      "1.2+8.3"
